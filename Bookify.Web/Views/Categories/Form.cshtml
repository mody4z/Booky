@model CategoryFormViewModel
@{
    ViewData["Title"]= "Add Category";
}


<div class="card shadow-sm">
    <div class="cardcard-title"><h3>Add Category</h3></div>
    <div class="card-body">
        <div class="row">
            <div class="col -md-4">
                <form method="post" asp-controller="Categories">
                    <div class="mb-5">
                        <div class="from-floating mb-2">
                            <input type="text" class="form-control" asp-for="Name" placeholder="zzzzz" />
                            <label asp-for="Name">EmailAddress</label>
                        </div>
                        <span asp-validation-for="Name"class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-check2"></i>
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
